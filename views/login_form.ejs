<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    
    <%- include('partials/nav', {user, errors}); %>

    <div class="signup section">
        <div class="container">

            <div class="card" style="background-color: rgba(0, 105, 148, 0.1)">

                <h1 class="h1"><%= title %></h1>

                <form action="" method="post">
    
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" name="username" id="username" class="input-field"
                        value="<%= (username) ? username : "" %>">
                        <% if (errors) { %>
                            <div class="error"><%= (errors.username) ? errors.username.msg : "" %></div>
                        <% } %>
                        <% if (username_err) { %>
                            <div class="error"><%= username_err %></div>
                        <% } %>
                    </div>
    
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="password" class="input-field">
                        <% if (errors) { %>
                            <div class="error"><%= (errors.password) ? errors.password.msg : "" %></div>
                        <% } %>
                        <% if (password_err) { %>
                            <div class="error"><%= password_err %></div>
                        <% } %>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </div>
    </div>

    
    <%- include('partials/footer'); %>

    <%- include('partials/custom'); %>
  </body>
</html>