<header class="header" data-header>
    <div class="container">
      <a href="index.html" class="logo">Secret World</a>

      <nav class="navbar" data-navbar>
        <div class="navbar-top">
          <a href="index.html" class="logo">Secret World</a>

          <button
            class="nav-close-btn"
            aria-label="close menu"
            data-nav-toggler
          >
            <ion-icon name="close-outline" aria-hidden="true"></ion-icon>
          </button>
        </div>

        <ul class="navbar-list">
          <li>
            <a href="/" class="navbar-link">Home</a>
          </li>

          <!--TRUE WHEN USER EXIST AND NO ERRORS FOUND-->
          <% if (user && !errors) { %>
            <li>
              <a href="/create-message" class="navbar-link">Create New Message</a>
            </li>

            <!--ENABLE PASSCODE ENTER WHEN USER IS NOT A MEMBER-->
            <% if (!user.membership_status) { %>
              <li>
                <a href="/passcode" class="navbar-link">Join the Club</a>
              </li>
            <% } %>
            <li>
              <a href="/users/log-out" class="navbar-link">Log out</a>
            </li>

          <% } else { %>
            <li>
              <a href="/users/signup" class="navbar-link">Sign up</a>
            </li>
            <li>
              <a href="/users/log-in" class="navbar-link">Log in</a>
            </li>
          <% } %>

        </ul>

        <!--TRUE WHEN USER EXIST AND NO ERRORS FOUND-->
        <% if (user && !errors) { %>
          <div class="account-details">
              <div class="navbar-link" data-account-link>Account</div>
              <div class="account-wrapper" data-account-details>
                <p class="h4"> <strong> <%= user.name %> </strong> </p>
                <p> <strong> username: </strong> <%= user.username %></p>
                <p> <strong> membership status: </strong>
                  <% if (user.isAdmin) { %>
                    <br> <%= "ADMIN" %> </br>
                  <% } else if (user.membership_status) { %>
                    <br> <%= "MEMBER" %> </br>
                  <% } else { %>
                    <br> <%= "NOT A MEMBER" %> </br>
                  <% } %>
                </p>
              </div>
          </div>
          <% } %>

      </nav>

        <button class="nav-open-btn" aria-label="open menu" data-nav-toggler>
          <ion-icon name="menu-outline" aria-hidden="true"></ion-icon>
        </button>
      </div>

      <div class="overlay" data-overlay></div>
    </div>
</header>