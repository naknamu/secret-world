<header class="header" data-header>
    <div class="container">
      <a href="index.html" class="logo">Secret World</a>

      <nav class="navbar" data-navbar>
        <div class="navbar-top">
          <a href="index.html" class="logo">Secret World</a>

          <button
            class="nav-close-btn"
            aria-label="close menu"
            data-nav-toggler
          >
            <ion-icon name="close-outline" aria-hidden="true"></ion-icon>
          </button>
        </div>

        <ul class="navbar-list">
          <li>
            <a href="/" class="navbar-link">Home</a>
          </li>
          <!--TRUE WHEN USER EXIST AND NO ERRORS FOUND-->
          <% if (user && !errors) { %>
            <li>
              <a href="#" class="navbar-link">Create New Message</a>
            </li>
            <li>
              <a href="#" class="navbar-link">Enter Passcode</a>
            </li>
            <li>
              <a href="/log-out" class="navbar-link">Log out</a>
            </li>
          <% } else { %>
            <li>
              <a href="/users/signup" class="navbar-link">Sign up</a>
            </li>
            <li>
              <a href="#" class="navbar-link">Log in</a>
            </li>
          <% } %>
        </ul>
        <!--TRUE WHEN USER EXIST AND NO ERRORS FOUND-->
        <% if (user && !errors) { %>
         <div class="account-details">
            <div class="h4">Account Details</div>
            <p>username: <%= user.username %></p>
            <p>membership status: <br> <%= user.status %> </br></p>
         </div>
        <% } %>

      </nav>

        <button class="nav-open-btn" aria-label="open menu" data-nav-toggler>
          <ion-icon name="menu-outline" aria-hidden="true"></ion-icon>
        </button>
      </div>

      <div class="overlay" data-overlay></div>
    </div>
</header>